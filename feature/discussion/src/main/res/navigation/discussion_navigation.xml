<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/discussion_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/phoneLoginFragment"
        android:name="com.erbeandroid.petfinder.feature.discussion.login.PhoneLoginFragment"
        android:label="fragment_phone_login"
        tools:layout="@layout/fragment_phone_login">

        <action
            android:id="@+id/action_phoneLoginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.erbeandroid.petfinder.feature.discussion.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_homeFragment_to_phoneLoginFragment"
            app:destination="@id/phoneLoginFragment" />

    </fragment>

</navigation>