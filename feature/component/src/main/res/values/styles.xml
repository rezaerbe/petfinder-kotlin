<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Shrine" parent="Theme.PetFinder">
        <!-- App Bar Bottom -->
        <item name="bottomAppBarStyle">@style/Widget.App.BottomAppBar</item>
        <!--<item name="floatingActionButtonStyle">@style/Widget.AppBarBottom.FloatingActionButton
        </item>-->

        <!-- App Bar Top -->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.App.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>

        <!-- Button -->
        <item name="borderlessButtonStyle">@style/Widget.App.Button.TextButton</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.OutlinedButton</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>

        <!-- Floating Action Button -->
        <item name="extendedFloatingActionButtonStyle">
            @style/Widget.App.ExtendedFloatingActionButton
        </item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>

        <!-- Card -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>

        <!-- Checkbox -->
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>

        <!-- Chip -->
        <item name="chipStyle">@style/Widget.App.Chip</item>

        <!-- Dialog -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>

        <!-- Divider -->
        <item name="materialDividerStyle">@style/Widget.App.MaterialDivider</item>

        <!-- Menu -->
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.App.Subtitle1</item>
        <item name="popupMenuBackground">@drawable/custom_popup_background</item>

        <item name="textInputFilledExposedDropdownMenuStyle">@style/Widget.App.ExposedDropdownMenu</item>

        <!-- Progress -->
        <item name="circularProgressIndicatorStyle">@style/Widget.App.CircularProgressIndicator
        </item>

        <!-- Checkbox -->
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>

        <!-- Bottom Sheet -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>

        <!-- Slider -->
        <item name="sliderStyle">@style/Widget.App.Slider</item>

        <!-- Snackbar -->
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="snackbarButtonStyle">@style/Widget.App.SnackbarButton</item>

        <!-- Switch -->
        <item name="switchStyle">@style/Widget.App.Switch</item>

        <!-- Tab -->
        <item name="tabStyle">@style/Widget.App.TabLayout</item>

        <!-- Text Field -->
        <item name="textInputFilledStyle">@style/Widget.App.TextInputLayout.FilledBox</item>
        <item name="textInputOutlinedStyle">@style/Widget.App.TextInputLayout.OutlinedBox</item>
    </style>
</resources>